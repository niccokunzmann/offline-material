#!/bin/sh

url=$1
name=$2
branch=$3
location=`pwd`

if [ ! -d $location/$name ]
then
  # create repo
  rm -rf /tmp/repo || { echo "error /tmp/repo exists"; exit 1; }  
  mkdir -p /tmp/repo
  cd /tmp/repo
  git clone $url || exit 2
  mv /tmp/repo/* $location/$name || exit 3
fi

# update repo
cd $location/$name || exit 4
git checkout $branch || exit 5
git pull $url $branch || exit 6


